.button {
    background-color: rgb(88, 88, 88);
    color: rgb(185, 185, 185);
}

.button:disabled {
    color: rgb(106, 106, 106);
    background-color: rgb(58, 58, 58);
    display: flex;
}

.button:hover {
    border-left-color: rgb(195, 128, 0);
    border-right-color: rgb(195, 128, 0);
    border-top-color: rgb(195, 128, 0);
    border-bottom-color: rgb(195, 128, 0);
}

.button:active {
    border-left-color: rgb(231, 152, 0);
    border-right-color: rgb(231, 152, 0);
    border-top-color: rgb(231, 152, 0);
    border-bottom-color: rgb(231, 152, 0);
    color: rgb(231, 152, 0);
}

.button-ability {
    width: 60px;
    height: 60px;
    position: relative;
    top: 3px;
    left: 1px;
    border-left-width: 4px;
    border-right-width: 4px;
    border-top-width: 4px;
    border-bottom-width: 4px;
    border-top-left-radius: 144px;
    border-bottom-left-radius: 144px;
    border-top-right-radius: 144px;
    border-bottom-right-radius: 144px;
    border-bottom-color: rgb(48, 48, 48);
    border-left-color: rgb(48, 48, 48);
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 3px;
    margin-bottom: 3px;
    padding-left: 7px;
    padding-right: 7px;
    padding-top: 7px;
    padding-bottom: 7px;
    -unity-text-align: lower-right;
    font-size: 19px;
    -unity-font-style: bold;
    min-width: 30px;
    min-height: 30px;
    max-width: 60px;
    max-height: 60px;
    flex-grow: 1;
    overflow: visible;
}

.section-panel {
    visibility: visible;
    display: flex;
    background-color: rgb(56, 56, 56);
    border-left-width: 5px;
    border-right-width: 5px;
    border-top-width: 5px;
    border-bottom-width: 5px;
    border-left-color: rgb(38, 38, 38);
    border-right-color: rgb(38, 38, 38);
    border-top-color: rgb(38, 38, 38);
    border-bottom-color: rgb(38, 38, 38);
}

.handle-drag {
    position: absolute;
    top: 40px;
    left: 56px;
    overflow: hidden;
    height: 20px;
    width: 20px;
    background-image: url('project://database/Assets/Textures/icon-move.png?fileID=2800000&guid=0b778a57e138e57419dcab6aafa1234a&type=3#icon-move');
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    background-color: rgb(40, 75, 38);
}
